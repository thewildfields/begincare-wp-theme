{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "name": "Dark Blue",
                    "slug": "dark-blue",
                    "color": "#002677"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "#126FB9"
                },
                {
                    "name": "Dark Gray",
                    "slug": "dark-gray",
                    "color": "#6A6A6A"
                },
                {
                    "name": "Light Gray",
                    "slug": "light-gray",
                    "color": "#F8F8F8"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1800px"
        },
        "spacing": {
            "defaultSpacingSizes": false,
            "spacingSizes": [
                {
                    "name": "XS",
                    "slug": "xs",
                    "size": "10px"
                },
                {
                    "name": "S",
                    "slug": "s",
                    "size": "20px"
                },
                {
                    "name": "M",
                    "slug": "m",
                    "size": "40px"
                },
                {
                    "name": "L",
                    "slug": "l",
                    "size": "80px"
                },
                {
                    "name": "XL",
                    "slug": "xl",
                    "size": "120px"
                },
                {
                    "name": "XXL",
                    "slug": "xxl",
                    "size": "160px"
                }
            ]
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "Lato",
                    "name": "Lato",
                    "slug": "lato",
                    "fontFace": [
                        {
                            "fontFamily": "Lato",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Lato-Light.woff",
                                "file:./assets/fonts/Lato-Light.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Lato",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Lato-Regular.woff",
                                "file:./assets/fonts/Lato-Regular.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Lato",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Lato-Bold.woff",
                                "file:./assets/fonts/Lato-Bold.woff2"
                            ]
                        }
                    ]
                }
            ],
            "defaultFontSizes": false,
            "fontSizes": [
                {
                    "name": "S",
                    "slug": "s",
                    "size": "0.75rem"
                },
                {
                    "name": "M",
                    "slug": "m",
                    "size": "1rem"
                },
                {
                    "name": "L",
                    "slug": "l",
                    "size": "1.5rem"
                },
                {
                    "name": "XL",
                    "slug": "xl",
                    "size": "3.5rem",
                    "fluid": {
                        "min": "1.5rem",
                        "max": "3.5rem"
                    }
                },
                {
                    "name": "XXL",
                    "slug": "xxl",
                    "size": "6rem",
                    "fluid": {
                        "min": "2.5rem",
                        "max": "6rem"
                    }
                }
            ]
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--black)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--lato)",
            "fontWeight": "400",
            "fontSize": "var(--wp--preset--font-size-l)",
            "lineHeight": "1.5"
        },
        "elements": {
            "link": {
                "typography": {
                    "textDecoration": "none"
                },
                "color": {
                    "text": "inherit"
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "700"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xxl)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xl)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--l)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--l)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--l)"
                    }
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "blockGap": "0px"
                }
            },
            "core/paragraph":{
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--s)",
                        "bottom": "var(--wp--preset--spacing--m)"
                    }
                }
            },
            "core/list": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--l)"
                }
            },
            "core/list-item": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--s)"
                    }
                }
            },
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--dark-blue)"
                },
                "typography": {
                    "fontWeight": "700"
                },
                "variations": {
                    "outline": {
                        "border": {
                            "color": "var(--wp--preset--color--dark-blue)"
                        },
                        "color": {
                            "background": "var(--wp--preset--color--white)",
                            "text": "var(--wp--preset--color--dark-blue)"
                        }
                    },
                    "fill": {
                        "color": {
                            "background": "var(--wp--preset--color--dark-blue)"
                        }
                    }
                },
                "elements": {
                    "button": {
                        ":hover": {
                            "color": {
                                "background": "var(--wp--preset--color--dark-blue)"
                            }
                        }
                    }
                }
            },
            "core/search":{
                "border": {
                    "width": "2px",
                    "color": "var(--wp--preset--color--dark-blue)",
                    "style": "solid",
                    "radius": "24px"
                },
                "elements": {
                    "button":{
                        "color": {
                            "text": "var(--wp--preset--color--dark-blue)",
                            "background": "transparent"
                        },
                        "spacing": {
                            "padding": {
                                "top": "var(--wp--preset--spacing--xs)",
                                "bottom": "var(--wp--preset--spacing--xs)",
                                "left": "var(--wp--preset--spacing--xs)",
                                "right": "var(--wp--preset--spacing--xs)"
                            }
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--white)",
                                "background": "var(--wp--preset--color--dark-blue)"
                            }
                        }
                    }
                },
                "css": "{overflow:hidden; box-sizing: border-box; height: 48px} & .wp-block-search__inside-wrapper{height: 100%; border: none!important; padding: 0; box-sizing: border-box; } & input{width: auto; padding-left: var(--wp--preset--spacing--s)}"
            }
        },
        "css": ".entry-content{margin: 0 auto} @media screen and (max-width: 1840px){.wp-site-blocks > .wp-block-template-part > *, .wp-site-blocks > .wp-block-post-content > *{padding-left: 20px;padding-right: 20px}}"
    }
}